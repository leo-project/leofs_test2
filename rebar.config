{require_otp_vsn, "R16B03-1|17"}.

{deps, [
        {erlcloud,    ".*", {git, "https://github.com/gleber/erlcloud.git", {tag, "v0.8.0"}}},
        {getopt,      ".*", {git, "https://github.com/jcomellas/getopt.git",{branch, "master"}}},
        {leo_commons, ".*", {git, "https://github.com/leo-project/leo_commons.git", {tag, "1.1.0"}}}
       ]}.

{erl_opts, [{src_dirs, [src]},
            {d, 'NOTEST'},
            warn_export_all,
            warn_unused_import,
            warn_untyped_record,
            debug_info]}.

{escript_incl_apps, [
                     erlcloud,
                     getopt,
                     jsx,
                     leo_commons
                    ]}.

{escript_emu_args, "%%! +K true -name test@127.0.0.1 -setcookie 401321b4 -rsh ssh\n"}.
